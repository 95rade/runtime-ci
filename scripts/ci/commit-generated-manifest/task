#!/bin/bash -exu

set -o pipefail

function main() {
  local root_dir
  root_dir="${1}"

  cp ./manifest/"${MANIFEST_NAME}" ./repo/"${MANIFEST_DESTINATION}"
  cp ./compiled-releases-ops-file/"${COMPILED_RELEASES_OPS_FILE_NAME}" ./repo/"${COMPILED_RELEASES_OPS_FILE_DESTINATION}"
  cp ./windows-ops-file/"${WINDOWS_OPS_FILE_NAME}" ./repo/"${WINDOWS_OPS_FILE_DESTINATION}"
  pushd repo > /dev/null
    if [[ -n $(git status --porcelain) ]]; then
      git config user.name "CF MEGA BOT"
      git config user.email "cf-mega@pivotal.io"

      git add ./"${COMPILED_RELEASES_OPS_FILE_DESTINATION}"
      git add ./"${MANIFEST_DESTINATION}"
      git add ./"${WINDOWS_OPS_FILE_DESTINATION}"

      local commit_message
      commit_message=$(cat ${root_dir}/commit-message/${COMMIT_MESSAGE_PATH})

      if [ -z "${commit_message}" ]; then
        commit_message="No changes"
      fi

      git commit -m "${commit_message}"

      git status
      git show --color | cat
    fi
  popd > /dev/null

  shopt -s dotglob
  cp -R repo/* updated-repo
}

main "${PWD}"
