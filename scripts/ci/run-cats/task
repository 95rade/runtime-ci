#!/bin/bash
set -xeu

export CONFIG=integration-config/${CONFIG_FILE_PATH}

echo "Moving cf-acceptance-tests onto the gopath..."
mkdir -p /go/src/github.com
cp -R cf-acceptance-tests /go/src/github.com/cloudfoundry/

cd /go/src/github.com/cloudfoundry/cf-acceptance-tests

./bin/test \
-keepGoing \
-randomizeAllSpecs \
-skipPackage=helpers \
-slowSpecThreshold=120 \
-nodes="${NODES}"

