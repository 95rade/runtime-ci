#!/bin/bash
set -eux

BOSH_DIRECTOR=$(cat $TARGET_FILE)
BOSH_USER=$(cat $USERNAME_FILE)
set +x
BOSH_PASSWORD=$(cat $PASSWORD_FILE)

echo "bosh -n  -t ${BOSH_DIRECTOR}  -u ${BOSH_USER}  -p REDACTED  upload release  release-out/nats-*.tgz  --skip-if-exists"
bosh \
  -n \
  -t ${BOSH_DIRECTOR} \
  -u "${BOSH_USER}" \
  -p "${BOSH_PASSWORD}" \
  upload release \
  release-out/nats-*.tgz \
  --skip-if-exists

echo "bosh -n  -t ${BOSH_DIRECTOR}  -u ${BOSH_USER}  -p REDACTED  upload stemcell  https://bosh.io/d/stemcells/bosh-aws-xen-ubuntu-trusty-go_agent --skip-if-exists"
bosh \
  -n \
  -t ${BOSH_DIRECTOR} \
  -u "${BOSH_USER}" \
  -p "${BOSH_PASSWORD}" \
  upload stemcell \
  https://bosh.io/d/stemcells/bosh-aws-xen-ubuntu-trusty-go_agent \
  --skip-if-exists

echo "bosh -n -t ${BOSH_DIRECTOR} -u ${BOSH_USER} -p REDACTED -d ${BOSH_MANIFEST} deploy --redact-diff"
bosh \
  -n \
  -t "${BOSH_DIRECTOR}" \
  -u "${BOSH_USER}" \
  -p "${BOSH_PASSWORD}" \
  -d "${BOSH_MANIFEST}" \
  deploy \
  --redact-diff
set -x
