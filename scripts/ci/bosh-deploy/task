#!/bin/bash
set -eux

BOSH_DIRECTOR=$(cat $TARGET_FILE)
BOSH_USER=$(cat $USERNAME_FILE)
set +x
BOSH_PASSWORD=$(cat $PASSWORD_FILE)
set -x

echo "bosh -n -t ${BOSH_DIRECTOR} -u ${BOSH_USER} -p REDACTED -d ${BOSH_MANIFEST} deploy --redact-diff"

set +x
bosh \
  -n \
  -t "${BOSH_DIRECTOR}" \
  -u "${BOSH_USER}" \
  -p "${BOSH_PASSWORD}" \
  -d "${BOSH_MANIFEST}" \
  deploy \
  --redact-diff
set -x
