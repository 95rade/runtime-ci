#!/bin/bash

set -xeu

: ${DOMAIN?}
if [ -z "${DOMAIN}" ]; then
  echo "\$DOMAIN was empty, which will not work for this task.  Please set the domain."
  exit 1
fi

DIR="$(pwd)"

function commit_bbl_state_file {
  pushd "${DIR}/env-repo"
    if [[ -n $(git status --porcelain) ]]; then
      git config user.name "CF MEGA BOT"
      git config user.email "cf-mega@pivotal.io"
      git add bbl-state.json
      git commit -m "Update bbl artifacts"
    fi
  popd

  pushd "${DIR}"
    shopt -s dotglob
    cp -R env-repo/* updated-env-repo/
  popd
}

trap commit_bbl_state_file EXIT

pushd env-repo
  bbl version

  bbl \
    up > ../bbl-up-output.txt

  set +x
  echo "$BBL_LB_CERT" > /tmp/bbl-cert
  echo "$BBL_LB_KEY" > /tmp/bbl-key
  set -x

  # The two commands below amount to "create or update"
  bbl \
    create-lbs \
    --type=cf \
    --domain=${DOMAIN} \
    --cert=/tmp/bbl-cert \
    --key=/tmp/bbl-key \
    --skip-if-exists > ../bbl-create-lbs-output.txt

  bbl \
    update-lbs \
    --domain=${DOMAIN} \
    --cert=/tmp/bbl-cert \
    --key=/tmp/bbl-key > ../bbl-update-lbs-output.txt
popd
