#!/bin/bash

set -xeu

BBL_LB_CERT="${BBL_LB_CERT:?"BBL_LB_CERT must be provided"}"
BBL_LB_KEY="${BBL_LB_KEY:?"BBL_LB_KEY must be provided"}"

echo "$BBL_LB_CERT" > /tmp/bbl-cert
echo "$BBL_LB_KEY" > /tmp/bbl-key

pushd env-repo
  set +x
  echo "bbl \
    --state-dir bbl-infrastructure \
    --aws-access-key-id [REDACTED] \
    --aws-secret-access-key [REDACTED] \
    --aws-region us-east-1 \
    unsupported-deploy-bosh-on-aws-for-concourse"
  bbl \
    --state-dir bbl-infrastructure \
    --aws-access-key-id "$AWS_ACCESS_KEY_ID" \
    --aws-secret-access-key "$AWS_SECRET_ACCESS_KEY" \
    --aws-region us-east-1 \
    unsupported-deploy-bosh-on-aws-for-concourse

  echo "bbl \
    --state-dir bbl-infrastructure \
    --aws-access-key-id [REDACTED] \
    --aws-secret-access-key [REDACTED] \
    --aws-region us-east-1 \
    unsupported-create-lbs \
    --type=cf \
    --cert=<(echo [REDACTED]) \
    --key=<(echo [REDACTED]) \
    --skip-if-exists"
  bbl \
    --state-dir bbl-infrastructure \
    --aws-access-key-id "$AWS_ACCESS_KEY_ID" \
    --aws-secret-access-key "$AWS_SECRET_ACCESS_KEY" \
    --aws-region us-east-1 \
    unsupported-create-lbs \
    --type=cf \
    --cert=/tmp/bbl-cert \
    --key=/tmp/bbl-key \
    --skip-if-exists
  set -x

  bbl --state-dir bbl-infrastructure director-address > bbl-infrastructure/target
  bbl --state-dir bbl-infrastructure director-username > bbl-infrastructure/username
  bbl --state-dir bbl-infrastructure director-password > bbl-infrastructure/password

  if [[ -n $(git status --porcelain) ]]; then
    git config user.name "CF MEGA BOT"
    git config user.email "cf-mega@pivotal.io"
    git add bbl-infrastructure
    git commit -m "Update bbl artifacts"
  fi
popd

shopt -s dotglob
cp -R env-repo/* updated-env-repo/
