#!/bin/bash
set -ex

# Cannot set -u before sourcing .bashrc because of all
# the unbound variables in things beyond our control.
source ~/.bashrc

set -u

# Inputs
URL="${URL:?"\$URL not set"}"
REASON="${REASON:?"\$REASON not set"}"

set +x
TOKEN="${TOKEN:?"\$TOKEN not set"}"

cat <<EOF
curl \
  -X PUT \
  "${URL}/no" \
  -d "token=[REDACTED]" \
  -d "reason=${REASON}" \
  -d "buildnumber=0"
EOF

curl \
  -X PUT \
  "${URL}/no" \
  -d "token=${TOKEN}" \
  -d "reason=${REASON}" \
  -d "buildnumber=0"

